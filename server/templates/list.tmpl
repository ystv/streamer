{{define "content"}}
    <div class="tabs is-toggle is-toggle-rounded">
        <ul>
            <li>
                <a href="/">
                    <span>Home</span>
                </a>
            </li>
            <li>
                <a href="/resume">
                    <span>Resume</span>
                </a>
            </li>
            <li class="is-active">
                <a href="/list">
                    <span>List</span>
                </a>
            </li>
            <li>
                <a href="/save">
                    <span>Save</span>
                </a>
            </li>
            <li>
                <a href="/recall">
                    <span>Recall</span>
                </a>
            </li>
        </ul>
    </div>
    <div class="card" id="enter">
        <div class="card-content">
            <p class="title">Listing all streams, active and saved</p>
                <p>If the stream is prefixed by "Active - " then go to <a href="https://streamer.dev.ystv.co.uk/resume">https://streamer.dev.ystv.co.uk/resume</a> In order to stop them or view the current status<br>
                    If the stream is prefixed by "Saved - " then go to <a href="https://streamer.dev.ystv.co.uk/recall">https://streamer.dev.ystv.co.uk/recall</a> In order to start them
            </p><br>
            <p id="listing"></p>
            <p id="error" style="color: red"></p><br>
            <input class="button" id="refresh" type="button" value="Refresh">
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $("#refresh").click(function () {
                $("#error").html("");
                $.ajax({
                    url: "list",
                    type: "post",
                    dataType: "text",
                    contentType: "application/x-www-form-urlencoded",
                    success: function (data) {
                        $("#listing").html(data);
                    },
                })
            }).trigger("click");
        });
    </script>
{{end}}